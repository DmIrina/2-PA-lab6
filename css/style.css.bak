* {
    box-sizing: border-box;
}

body {
    margin: 0;
    padding: 0;
    display: grid;
    grid-template-rows: 1fr;
}

header {    
    color: white;
    text-align: center;    
    justify-content: center;
    align-items: center;
    background: blue;
    position: relative;
	margin: 20px;
}

.button {
    color: white;
    font-size: 22px;
    font-family: sans-serif;
    outline: none;
    user-select: none;
    border: none;
    border-radius: 25px;
    background-color: rgb(5, 51, 1);
    width: 200px;
    height: 50px;
    transition: all 0.3s ease;
    cursor: pointer;
}

.button:hover {
    background-color: rgb(7, 73, 1);
}

